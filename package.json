{
  "name": "codeified",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Matthew Keil",
  "description": "Blockchain Based Decentralized Democratic Governance Through Transparent and Automated Aggregation of Individually CODEified Constitutions",
  "scripts": {
    "clean": "npm run clean --workspaces",
    "dev": "run-p dev:*",
    "dev:serverless": "npm run dev --workspace=@recipe-builder/serverless",
    "dev:frontend": "npm run dev  --workspace=@recipe-builder/frontend",
    "dev:contracts": "npm run dev --workspace=@recipe-builder/contracts",
    "build": "npm run build --workspaces",
    "prebuild": "npm run clean --workspaces",
    "synth": "npm run synth --workspace=@recipe-builder/infrastructure",
    "deploy": "npm run deploy --workspace=infrastructure",
    "destroy": "npm run destroy --workspace=infrastructure",
    "node": "node",
    "ts": "npm run node -- -r ts-node/register"
  },
  "workspaces": [
    "packages/utils",
    "packages/models",
    "packages/config",
    "packages/contracts",
    "packages/serverless",
    "packages/frontend",
    "packages/infrastructure"
  ],
  "private": true,
  "devDependencies": {
    "full-stack-pattern": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "latest",
    "typescript": "latest"
  }
}
